        <Border BorderBrush="White" BorderThickness="2" Height="40" HorizontalAlignment="Left" Margin="2,58,0,0" Name="borderClear" VerticalAlignment="Top" Width="100" MouseUp="borderClear_MouseUp" Background="White">
            <Label Content="清除" FontFamily="KaiTi" FontSize="32" Foreground="Black" Height="36" Name="label2" Padding="0" Width="61" />
        </Border>
        <Border BorderBrush="White" BorderThickness="2" Height="40" HorizontalAlignment="Left" Margin="329,58,0,0" Name="borderConfirm" VerticalAlignment="Top" Width="100" MouseUp="borderConfirm_MouseUp" Background="White">
            <Label Content="确认" FontFamily="KaiTi" FontSize="32" Foreground="Black" Height="36" Name="label3" Padding="0" Width="65" />
        </Border>
        <Border BorderBrush="White" BorderThickness="2" Height="40" Name="borderBlank" Width="100" Margin="165,2,165,58" MouseUp="borderBlank_MouseUp" Visibility="Hidden">
            <Label Content="空白" Height="36" Name="label1" Foreground="White" FontFamily="KaiTi" FontSize="35" Width="71" Padding="0" Margin="0" Visibility="Hidden" />
        </Border>
    </Grid>
